<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Version>1.0.6</Version>
    <RootNamespace>Datasilk.Core</RootNamespace>
    <PackageId>Datasilk.Core.Mvc</PackageId>
    <Authors>Mark Entingh</Authors>
    <Company>Datasilk</Company>
    <Product>Datasilk Core MVC</Product>
    <Description>An ultra-lightweight MVC framework for the web that handles page requests and RESTful web API calls.</Description>
    <Copyright>Datasilk 2020</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://mvc.datasilk.io/</PackageProjectUrl>
    <PackageIconUrl>https://mvc.datasilk.io/images/favicon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/datasilk/core</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>MVC, Web API, lightweight</PackageTags>
    <PackageReleaseNotes>Upgraded from .NET Core 3.1 to .NET 5.0. Removed BinaryFormatter reference for security purposes</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.6.0</AssemblyVersion>
    <FileVersion>1.0.6.0</FileVersion>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>


</Project>
